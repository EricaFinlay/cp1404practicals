BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: ''
            font_size: 48
            multiline: False
            on_text: app.handle_calculate(self.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                font_size: 48
                on_press: app.handle_editing(input_number.text, 1)
            Button:
                text: 'Down'
                font_size: 48
                on_press: app.handle_editing(input_number.text, -1)
    Button:
        text: 'Convert miles to kilometres'
        font_size: 48
        on_press: app.handle_calculate()
    Label:
        id: output_label
        text: app.output_number
        font_size: 48
        color: (1, 1, 0, 1)
